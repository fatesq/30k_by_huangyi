<style>

</style>
<template>
<view>
  <van-cell-group>
    <van-cell
      is-link
      title="{{value}}"
      bind:click="toList"
    />
    <van-field
      id="value2"
      label="占"
      placeholder="0"
      bind:change="onInput"
      use-button-slot
    >
      <text slot="button">%</text>
    </van-field>
  </van-cell-group>
  <view class="fix">
    <button type="warn" @tap="save">保存</button>
  </view>
</view>
</template>
<script>
import wepy from 'wepy'
import utils from '@/utils/utils'

export default class Nature extends wepy.page {
  config = {
    navigationBarTitleText: '性质分布',
    usingComponents: {
      'van-cell': '../../components/van/cell/index',
      'van-cell-group': '../../components/van/cell-group/index',
      'van-field': '../../components/van/field/index'
    }
  }

  data = {
    value: '请选择职业分布',
    value2: '',
    id: ''
  }

  methods = {
    toList() {
      this.$emit('showJobList', true);
      this.$apply()
    },
    onInput(e) {
      this[e.target.id] = e.detail
      this.$apply()
    },
    save() {
      if (!this.value || !this.value2) {
        utils.alert('有未填写的项目')
        return
      }
      this.$emit('saveJob', this.id, this.value, this.value2);
      this.value = ''
      this.value2 = ''
      this.$apply()
    },
    getList(id, name) {
      this.id = id,
      this.value = name
      this.$apply()
    }
  }
}
</script>
